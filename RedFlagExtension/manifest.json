{
  "manifest_version": 3,
  "name": "Red Flag Report",
  "version": "1.0.0",
  "description": "Scans signup pages and summarizes Terms of Service and Privacy Policy into key red flags",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Red Flag Report"
  }
}

